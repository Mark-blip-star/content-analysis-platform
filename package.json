{
  "name": "content-analysis-platform",
  "version": "1.0.0",
  "description": "Full-stack AI-powered content analysis platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm run start:dev --prefix backend",
